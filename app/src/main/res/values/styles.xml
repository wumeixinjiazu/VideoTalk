<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/gray_9</item>
    </style>

    <style name="FullScreenDialogStyle" parent="android:Theme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="HdSettingAnimation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/tranlate_dla_in</item>
        <item name="android:windowExitAnimation">@anim/tranlate_dla_out</item>
    </style>

    <!--SeekBar样式-->
    <style name="seekBarCustonStyle">
        <item name="android:background">@null</item>
        <item name="android:thumb">@drawable/ic_seek_thumb</item>
        <item name="android:maxHeight">3dp</item>
        <item name="android:minHeight">3dp</item>
        <item name="android:progressDrawable">@drawable/seekbar_shape</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_weight">3</item>
    </style>

</resources>
